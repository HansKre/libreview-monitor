{
  "manifest_version": 3,
  "name": "LibreView Glucose Monitor",
  "version": "1.0.0",
  "description": "Real-time glucose monitoring with LibreView API integration",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.libreview.io/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Glucose Monitor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}