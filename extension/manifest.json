{
  "manifest_version": 3,
  "name": "LibreView Glucose Monitor",
  "version": "1.0.0",
  "description": "Real-time glucose monitoring for FreeStyle Libre users. Interactive charts with trend projections and dynamic browser icons.",
  "homepage_url": "https://github.com/HansKre/libreview-monitor",
  "short_name": "LibreView Monitor",
  "permissions": ["storage", "activeTab", "alarms"],
  "host_permissions": ["https://api.libreview.io/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LibreView Glucose Monitor for FreeStyle Libre",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "minimum_chrome_version": "88"
}
